<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:orientation="vertical"
    tools:context="com.uwimonacs.csmobile.fragments.NewEventFragment"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:id="@+id/post_container" android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginStart="30dp" android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp" android:layout_marginRight="30dp"
        android:layout_marginTop="15dp" android:paddingTop="5dp"
        android:paddingLeft="10dp" android:paddingStart="10dp"
        android:paddingRight="10dp" android:paddingEnd="10dp">

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="@string/title_placeholder" android:inputType="text"
            android:minLines="1">
            <requestFocus />
        </EditText>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginLeft="3dp" android:layout_marginStart="3dp"
            android:layout_marginTop="2dp" android:layout_marginBottom="5dp" >

            <TextView
                android:id="@+id/by" android:textSize="15dp" android:text="by "
                android:layout_width="wrap_content" android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/author" android:textSize="15dp"
                android:layout_width="match_parent" android:layout_height="wrap_content" />

        </LinearLayout>

        <EditText
            android:id="@+id/body"
            android:layout_width="match_parent" android:layout_height="fill_parent"
            android:inputType="textMultiLine" android:scrollbars="vertical"
            android:ems="10" android:gravity="top|start"
            android:hint="@string/compose_placeholder" android:background="@android:color/transparent"
            android:minLines="3" />

    </LinearLayout>

</LinearLayout>

