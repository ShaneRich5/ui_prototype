<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent" android:layout_height="match_parent"
     tools:context=".HomeActivity"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_height="@dimen/home_row_height">

            <LinearLayout
                android:id="@+id/item_1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@android:color/holo_blue_light"
                android:onClick="openArticle">

            </LinearLayout>


            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/item_2"
                    android:layout_height="@dimen/half_home_row_height"
                    android:layout_width="fill_parent"
                    android:background="@android:color/holo_red_light"
                    android:onClick="openVideo">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@android:drawable/ic_media_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/item_3"
                    android:layout_height="@dimen/half_home_row_height"
                    android:layout_width="fill_parent"
                    android:background="@android:color/holo_green_light">

                </LinearLayout>

            </LinearLayout>

        </TableRow>



        <TableRow
            android:layout_height="@dimen/home_row_height">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_4"
                    android:layout_height="@dimen/half_home_row_height"
                    android:layout_width="fill_parent"
                    android:background="@android:color/holo_orange_light">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_5"
                    android:layout_height="@dimen/half_home_row_height"
                    android:layout_width="fill_parent"
                    android:background="@android:color/darker_gray">

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/item_6"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@android:color/holo_purple">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@android:drawable/ic_media_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </TableRow>



        <TableRow
            android:layout_height="@dimen/home_row_height">

            <LinearLayout
                android:id="@+id/item_7"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@android:color/holo_green_light">

            </LinearLayout>


            <LinearLayout
                android:layout_height="@dimen/home_row_height"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_8"
                    android:layout_height="@dimen/half_home_row_height"
                    android:layout_width="fill_parent"
                    android:background="@android:color/holo_blue_light">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_9"
                    android:layout_height="@dimen/half_home_row_height"
                    android:layout_width="fill_parent"
                    android:background="@android:color/holo_red_light">

                </LinearLayout>

            </LinearLayout>

        </TableRow>




        <TableRow
            android:layout_height="@dimen/home_row_height">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_10"
                    android:layout_height="@dimen/half_home_row_height"
                    android:layout_width="fill_parent">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_11"
                    android:layout_height="@dimen/half_home_row_height"
                    android:layout_width="fill_parent">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_12"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2">

            </LinearLayout>

        </TableRow>

    </TableLayout>
</LinearLayout>
